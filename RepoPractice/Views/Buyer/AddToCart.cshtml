@model RepoPractice.Models.ProductModel
@{
    ViewBag.Title = "Addtocart";
}
<br />
<br />
<br />
<div style="background-color:lightcoral;">
    @using (@Html.BeginForm())
    {<div class="container" style="margin-top:70px">
            <a href="javascript:void(0);" onclick="history.go(-1);"><svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
    <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
</svg></a>
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <img style="min-height:200px; width:200px;" src="@Url.Content(Model.Image)" />
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8">
                    <h1>Product Name: @Model.ProductName</h1>
                    <h2>Price: @Model.Price PKR</h2>
                    <input type="number" name="qty" value="0" id="qty1" min="1" max="10" />
                    <input type="submit" value="Submit" class="btn btn-danger" />
                </div>
            </div>
        </div>

    }
</div>