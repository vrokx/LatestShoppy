@{
    ViewBag.Title = "checkout";
}



<h2>ViewCart</h2>

<div class="container" style="margin-top:70px">
    <a href="javascript:void(0);" onclick="history.go(-1);">
        <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
            <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
        </svg>
    </a>
    </div>

    <table class="table table-responsive">

        <thead>
            <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>PRICE</th>
                <th>QUANTITY</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {


                <tr>
                    <td>@item.ProductModel_ProductId </td>
                    <td>@item.productname</td>
                    <td>@item.price</td>
                    <td>@item.Quantity</td>
                    <td>@item.TotalAmount</td>
                    <td><a class="btn btn-danger btn-sm" href="@Url.Action("Remove", new { id = @item.CartId })">&#10060;</a></td>
                </tr>

            }


        </tbody>

         @*<tfoot>
            <tr>
                <td colspan="4"></td>
                <td>@TempData["total"]</td>

            </tr>
        </tfoot>*@

    </table>
    <h2>Grand Total : @ViewBag.GrandTotal</h2>

    <button class="btn btn-outline-success">@Html.ActionLink("Buy Now", "Checkout", "Buyer")</button>
    <button class="btn btn-outline-success">@Html.ActionLink("Add More Products", "BuyerDisplayAllProduct", "Buyer")</button>
